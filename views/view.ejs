<%- include('./port/layout-start', {title: title}) %>
<a class="btn btn-sm btn-primary" href="/">Назад</a>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text"><%= book.authors %></p>
                <p class="card-text"><%= book.favorite %></p>
                <img class="img-fluid" alt="img" src="/<%= book.fileCover %>"/>
                <a target="_blank" href="/<%= book.fileBook %>"><%= book.fileName || 'fileName' %></a>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>

<%- include('./port/layout-end') %>
